# REQUIRED - Telegram API credentials
BOT_TOKEN = "your_bot_token_here" # Get from @BotFather
API_ID = "your_api_id_here" # Get from my.telegram.org
API_HASH = "your_api_hash_here" # Get from my.telegram.org

# REQUIRED - Admin settings
ADMINS = "your_user_id_here" # Admin user IDs (comma-separated for multiple)

# REQUIRED - Database
DATABASE_URI = "mongodb://username:password@host:port/database" # MongoDB connection string

# REQUIRED - Channels
LOG_CHANNEL = "-100your_log_channel_id_here" # Channel ID where bot logs will be sent
COURSE_CHANNEL = "-100your_course_channel_id_here" # Channel ID where course files are stored 
PUBLIC_CHANNEL = "your_public_channel_username" # Public channel username without @

# OPTIONAL - User settings
AUTH_USERS = "" # Additional users with special permissions (comma-separated IDs)
OWNER_USERNAME = "your_username" # Your Telegram username without @
SUPPORT_CHAT_ID = "your_support_group" # Support group username without @

# OPTIONAL - Appearance settings
PICS = "https://example.com/chess_banner.jpg" # Banner images (comma-separated)
CUSTOM_FILE_CAPTION = "{file_name}" # Custom caption for files

# OPTIONAL - Feature toggles (true/false)
FORCE_SUB = "false" # Force users to subscribe to channels
PROTECT_CONTENT = "false" # Prevent forwarding/saving of content
AUTO_DELETE_ENABLED = "true" # Auto-delete messages after certain period
TOKEN_VERIFICATION_ENABLED = "false" # Enable token verification system
PREMIUM_ENABLED = "false" # Enable premium features
REFER_SYSTEM_ENABLED = "false" # Enable referral system

# OPTIONAL - External links
SUPPORT_LINK = "https://t.me/your_support_group" # Support group link
UPDATES_LINK = "https://t.me/your_updates_channel" # Updates channel link
OWNER_LINK = "https://t.me/your_username" # Owner's contact link

# OPTIONAL - Advanced settings
SESSION = "ChessCoursesBot" # Session name
DATABASE_NAME = "chess_courses_bot" # MongoDB database name
COURSES_COLLECTION = "courses" # Collection for courses
FILES_COLLECTION = "course_files" # Collection for files
MULTI_DB_ENABLED = "false" # Enable multiple database support
FALLBACK_DATABASE_URI = "" # Fallback database URI 